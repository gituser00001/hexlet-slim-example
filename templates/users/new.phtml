    <label>
        Nickname:
      <input type="text" name="user[name]">
    </label>
  </div>
  <div>
    <label>
      Email:
      <input type="email" required name="user[email]">
    </label>
    </div>
  <div>
  <input type="submit" value="Submit">
</form>